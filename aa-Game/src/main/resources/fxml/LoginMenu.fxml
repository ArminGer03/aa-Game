<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.Contollers.LoginMenuGController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="center" spacing="10">
            <Label text="welcome !" />
            <TextField promptText="user" maxWidth="200" fx:id="username"/>
            <PasswordField promptText="password" maxWidth="200" fx:id="password"/>
            <HBox alignment="center" spacing="20">
                <Button text="submit" onMouseClicked="#submit"/>
                <Button text="reset"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
